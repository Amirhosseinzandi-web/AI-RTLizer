{
    "manifest_version": 3,
    "name": "AI-RTLizer",
    "description": "Base Level Extension",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "solution.png"
    },
    "content_scripts": [
        {
            "matches": ["https://claude.ai/*" , "https://copilot.microsoft.com/*" , "https://lmarena.ai/*" , "https://chatgpt.com/*" , "https://chat.deepseek.com/*"],
            "js": ["app.js"]
        }
    ]
}